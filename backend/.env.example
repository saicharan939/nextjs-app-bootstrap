# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/abhaya-news

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# API Keys
API_KEY=your-api-key-for-external-integrations

# YouTube Data API (for video integration)
YOUTUBE_API_KEY=your-youtube-data-api-key

# Firebase Configuration (for authentication and notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_CLIENT_ID=your-firebase-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Cache Configuration (Redis - optional)
REDIS_URL=redis://localhost:6379

# External Services
SMS_SERVICE_API_KEY=your-sms-service-api-key
SMS_SERVICE_URL=https://api.sms-service.com

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Development/Testing
SEED_DATABASE=false
ENABLE_SWAGGER=true
